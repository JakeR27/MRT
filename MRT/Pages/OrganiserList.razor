@page "/organisers"
@using MRT.Data
@using MRT.Data.ResultModels
@using MRT.Pages.Tables
@inject ResultsService ResultsService

<PageTitle>Organisers</PageTitle>

<h1>List of Organisers</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (organisers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <OrganiserTable organisers="@organisers" />
}

@code {
    private Organiser[]? organisers;

    protected override async Task OnInitializedAsync()
    {
        organisers = await ResultsService.GetOrganisersAsync();
    }
}