@if (laptime != null)
{
    @if (laptime.Value.Hour > 0)
    {
        @($"{laptime.Value.Hour}:{laptime.Value.Minute}:{laptime.Value.Second}.{laptime.Value.Millisecond}")
    }
    else
    {
        @if (laptime.Value.Minute > 0)
        {
            @($"{laptime.Value.Minute}:{laptime.Value.Second}.{laptime.Value.Millisecond}")
        }
        else
        {
            @if (laptime.Value.Second == 0 && laptime.Value.Millisecond == 0)
            {
                @("-")
            }
            else
            {
                @($"{laptime.Value.Second}.{laptime.Value.Millisecond}")
            }
        }
    }
}
else
{
    @("-")
}
@code {
    [Parameter]
    public DateTime? laptime { get; set; }
}